@model WebApplication.Models.KayitViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white text-center">
                    <h3 class="mb-0">Kayıt Ol</h3>
                </div>
                <div class="card-body">
                    <form asp-action="KayitOl" method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-3">
                            <label asp-for="Eposta" class="form-label fw-bold">E-posta</label>
                            <input asp-for="Eposta" class="form-control" placeholder="E-posta adresinizi girin" />
                            <span asp-validation-for="Eposta" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="Sifre" class="form-label fw-bold">Şifre</label>
                            <input asp-for="Sifre" class="form-control" type="password" placeholder="Şifrenizi oluşturun" />
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="SifreyiOnayla" class="form-label fw-bold">Şifreyi Onayla</label>
                            <input asp-for="SifreyiOnayla" class="form-control" type="password" placeholder="Şifrenizi tekrar girin" />
                            <span asp-validation-for="SifreyiOnayla" class="text-danger"></span>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">Kayıt Ol</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        Zaten bir hesabınız var mı?
                        <a asp-controller="Hesap" asp-action="GirisYap" class="text-success fw-bold">Giriş Yap</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
