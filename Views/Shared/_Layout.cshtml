<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Anasayfa" asp-action="Index">ÇEVRİMİÇİ PAZAR YERİ</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav">
                        @if (ViewContext.RouteData.Values["controller"]?.ToString() == "Anasayfa" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hesap" asp-action="GirisYap">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hesap" asp-action="KayitOl">Kayıt Ol</a>
                            </li>
                        }
                        else if (ViewContext.RouteData.Values["controller"]?.ToString() == "Hesap" && ViewContext.RouteData.Values["action"]?.ToString() == "GirisYap")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hesap" asp-action="KayitOl">Kayıt Ol</a>
                            </li>
                        }
                        else if (ViewContext.RouteData.Values["controller"]?.ToString() == "Hesap" && ViewContext.RouteData.Values["action"]?.ToString() == "KayitOl")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Hesap" asp-action="GirisYap">Giriş Yap</a>
                            </li>
                        }
                        else if (ViewContext.RouteData.Values["controller"]?.ToString() == "Urunler" && ViewContext.RouteData.Values["action"]?.ToString() == "Index")
                        {
                            <li class="nav-item">
                                <form asp-area="" asp-controller="Hesap" asp-action="CikisYap" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link text-dark">Çıkış Yap</button>
                                </form>
                            </li>
                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebApplication
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
