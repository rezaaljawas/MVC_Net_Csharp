@model IEnumerable<WebApplication.Models.Urun>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Ürün Listesi</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Ürünler</h4>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr class="table-primary">
                        <th>ID</th>
                        <th>Adı</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Kategori</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Id</td>
                            <td>@product.Adi</td>
                            <td>@product.Fiyat</td>
                            <td>@product.Stok</td>
                            <td>@product.Kategori</td>
                            <td>
                                <a asp-action="Detaylar" asp-route-id="@product.Id" class="btn btn-info btn-sm">Detaylar</a>
                                <a asp-action="Duzenle" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Düzenle</a>
                                <a asp-action="Sil" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Olustur" class="btn btn-success">Yeni Ürün Ekle</a>
    </div>
</div>
