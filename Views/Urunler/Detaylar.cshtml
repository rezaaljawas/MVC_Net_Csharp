@model WebApplication.Models.Urun
@{
    ViewData["Title"] = "Ürün Detayları";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Ürün Detayları</h1>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4>Ürün Bilgileri</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Adı</dt>
                <dd class="col-sm-9">@Model.Adi</dd>

                <dt class="col-sm-3 font-weight-bold">Açıklama</dt>
                <dd class="col-sm-9">@Model.Aciklama</dd>

                <dt class="col-sm-3 font-weight-bold">Fiyat</dt>
                <dd class="col-sm-9">@Model.Fiyat</dd>

                <dt class="col-sm-3 font-weight-bold">Stok</dt>
                <dd class="col-sm-9">@Model.Stok</dd>

                <dt class="col-sm-3 font-weight-bold">Kategori</dt>
                <dd class="col-sm-9">@Model.Kategori</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <a asp-action="Index" class="btn btn-secondary">Listeye Geri Dön</a>
    </div>
</div>
